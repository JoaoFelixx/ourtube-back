{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ES2016",
      "ES2021"
    ],
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "esModuleInterop": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
  },
  "include": ["src/**/*"],
  "exclude": ["__tests__/**/*"]
}